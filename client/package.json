{
  "name": "client",
  "version": "0.1.0",
  "description": "Tanvir Islam",
  "private": true,
  "scripts": {
    "clean": "rimraf ../dist",
    "lint": "eslint --fix --ext .js,.vue,.html './*.js' './src/**/*.js' './src/**/*.vue'",
    "build-dist": "vue-cli-service build",
    "build": "npm-run-all lint clean build-dist",
    "serve": "vue-cli-service serve",
    "start": "npm-run-all lint serve"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-brands-svg-icons": "^5.13.0",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@fortawesome/vue-fontawesome": "^0.1.9",
    "axios": "^0.19.2",
    "core-js": "^3.6.4",
    "debounce": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "particles.js": "^2.0.0",
    "rimraf": "^3.0.2",
    "vue": "^2.6.11",
    "vue-observe-visibility": "^0.4.6",
    "vue-particles": "^1.0.9",
    "vue-router": "^3.1.6",
    "vue2-animate": "^2.1.3",
    "vuetify": "^2.2.11",
    "vuex": "^3.2.0",
    "vuex-persistedstate": "^3.0.1",
    "vuex-router-sync": "^5.0.0",
    "wow.js": "^1.2.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.3.0",
    "@vue/cli-plugin-eslint": "^4.3.0",
    "@vue/cli-service": "^4.3.0",
    "@vue/eslint-config-standard": "^5.1.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-vue": "^6.2.2",
    "sass": "^1.19.0",
    "sass-loader": "^8.0.0",
    "terser-webpack-plugin": "^2.3.5",
    "vue-cli-plugin-vuetify": "^2.0.5",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.3.0",
    "yargs-parser": "^18.1.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true,
      "jasmine": true
    },
    "extends": [
      "airbnb-base",
      "plugin:vue/recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "no-console": "off",
      "arrow-parens": 0,
      "generator-star-spacing": 0,
      "quotes": [
        2,
        "single"
      ],
      "max-len": [
        "error",
        {
          "code": 120,
          "ignoreComments": false
        }
      ],
      "no-param-reassign": [
        "error",
        {
          "props": true,
          "ignorePropertyModificationsFor": [
            "state"
          ]
        }
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
